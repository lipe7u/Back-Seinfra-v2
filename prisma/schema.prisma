generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model record_orders {
  id_order       Int              @id @default(autoincrement())
  id_applicant Int?
  sector_resp     Int
  address       String
  reference     String?
  description     String
  status         String
  creation_date   DateTime?        @default(now()) @db.Timestamptz(6)
  concluded_date DateTime?         @db.Timestamptz(6)
  justification  String?
  users       users?        @relation(fields: [id_applicant], references: [id_user], onDelete: NoAction, onUpdate: NoAction)
  sectors        sectors          @relation(fields: [sector_resp], references: [id_sector], onDelete: NoAction, onUpdate: NoAction)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model sectors {
  id_sector             Int                    @id @default(autoincrement())
  name_setor           String
  record_orders      record_orders[]
}

model users {
  id_user         Int               @id @default(autoincrement())
  name            String?           @db.VarChar(200)
  phone        String            @unique @db.VarChar(20)
  cpf             String            @unique @db.Char(11)
  password_hash      String?           @db.VarChar(60)
  Admin           Boolean           @default(false)
  record_orders  record_orders[]
}
